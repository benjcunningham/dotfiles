root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.diff]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
